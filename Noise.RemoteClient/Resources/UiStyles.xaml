<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="PlayColor">#FF00D000</Color>

    <Style x:Key="TitleViewTitleStyle" TargetType="Label">
        <Setter Property="FontSize" Value="Large"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="LineBreakMode" Value="NoWrap"/>
    </Style>

    <Style x:Key="TitleViewSubtitleStyle" TargetType="Label" BasedOn="{StaticResource TitleViewTitleStyle}">
        <Setter Property="FontSize" Value="Medium"/>
    </Style>

    <Style x:Key="ListItemHeaderStyle" TargetType="Label">
        <Setter Property="FontSize" Value="Large"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="LineBreakMode" Value="NoWrap"/>
    </Style>
    <Style x:Key="ListItemDetailStyle" TargetType="Label">
        <Setter Property="FontSize" Value="Small"/>
        <Setter Property="Opacity" Value="0.75"/>
        <Setter Property="LineBreakMode" Value="NoWrap"/>
    </Style>

    <Style x:Key="DialogTextStyle" TargetType="Label">
        <Setter Property="FontSize" Value="Medium"/>
        <Setter Property="LineBreakMode" Value="NoWrap"/>
    </Style>
</ResourceDictionary>