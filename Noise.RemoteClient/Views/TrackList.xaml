<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Noise.RemoteClient.Views.TrackList"
             Title="Track List">

    <Shell.TitleView>
        <Grid BackgroundColor="{DynamicResource NavigationBarColor}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackLayout Grid.Column="0" Orientation="Horizontal" BackgroundColor="Transparent">
                <Label Style="{StaticResource TitleViewTitleStyle}" Text="Tracks for: "/>
                <Label Style="{StaticResource TitleViewTitleStyle}" Text="{Binding ArtistName}"/>
                <Label Style="{StaticResource TitleViewTitleStyle}" Text="/"/>
                <Label Style="{StaticResource TitleViewTitleStyle}" Text="{Binding AlbumName}"/>
            </StackLayout>
        </Grid>
    </Shell.TitleView>

    <ContentPage.Content>
        <Grid>
            <ListView Margin="5" ItemsSource="{Binding DisplayList}" HasUnevenRows="True" SelectionMode="None" CachingStrategy="RecycleElement"
                      ItemTemplate="{StaticResource AlbumTrackTemplate}"/>

            <ActivityIndicator VerticalOptions="Center" HorizontalOptions="Center" IsRunning="{Binding IsBusy}"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>