<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Storyboard x:Key="MouseEnterAnimation" x:Shared="False">
        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.1" To="1.0" Duration="0:0:0.3"/>
    </Storyboard>

    <Storyboard x:Key="MouseLeaveAnimation" x:Shared="False">
        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1.0" To="0.1" Duration="0:0:1"/>
    </Storyboard>

</ResourceDictionary>