<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Storyboard x:Key="ScrollBarEnterAnimation" x:Shared="False">
        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.15" To="1.0" Duration="0:0:0.3"/>
    </Storyboard>

    <Storyboard x:Key="ScrollBarLeaveAnimation" x:Shared="False">
        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1.0" To="0.15" Duration="0:0:1"/>
    </Storyboard>

    <Storyboard x:Key="WidgetEnterAnimation" x:Shared="False">
        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.4" To="1.0" Duration="0:0:0.3"/>
    </Storyboard>

    <Storyboard x:Key="WidgetLeaveAnimation" x:Shared="False">
        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1.0" To="0.4" Duration="0:0:1"/>
    </Storyboard>
</ResourceDictionary>