<UserControl x:Class="Noise.UI.Views.PlayQueueView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ValueConverters="clr-namespace:Noise.UI.ValueConverters"
             xmlns:Behaviours="clr-namespace:Noise.UI.Behaviours"
             xmlns:EventCommandTriggers="clr-namespace:Noise.UI.Behaviours.EventCommandTriggers" 
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
              DataContext="{Binding PlayQueueViewModel, Source={StaticResource ViewModelLocator}}"
             >
    <Control.Resources>
        <Behaviours:CommandReference x:Key="DeleteCommandReference" Command="{Binding DeleteCommand}" />
    </Control.Resources>

    <Control.InputBindings>
        <KeyBinding Key="Delete" Command="{StaticResource DeleteCommandReference}" />
    </Control.InputBindings>

    <GroupBox BorderThickness="1" BorderBrush="{DynamicResource TrimColor}" Header=" Play Queue " Margin="3,0,3,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ListView Grid.Row="0" x:Name="PlayQueueListView" BorderThickness="0"
                      ItemsSource="{Binding Path=QueueList}"
                      SelectedItem="{Binding Path=SelectedItem}"
                      SelectedIndex="{Binding Path=SelectedIndex}"
                      Behaviours:ListViewEnsureVisible.VisibleIndex="{Binding Path=PlayingIndex, Mode=OneWay}"
                      Behaviours:ListViewColumns.Stretch="true">
                <EventCommandTriggers:CommandSource.Trigger>
                    <EventCommandTriggers:CommandTriggerGroup>
                        <EventCommandTriggers:EventCommandTrigger RoutedEvent="ListView.Loaded" Command="{Binding Path=OnLoaded}"/>
                        <EventCommandTriggers:EventCommandTrigger RoutedEvent="ListViewItem.MouseDoubleClick" Command="{Binding Path=PlayRequested}"
                                                                  CustomParameter="{Binding ElementName=PlayQueueListView, Path=SelectedValue}" />
                    </EventCommandTriggers:CommandTriggerGroup>
                </EventCommandTriggers:CommandSource.Trigger>
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=IsPlaying}" Value="true">
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Path=HasPlayed}" Value="true">
                                <Setter Property="Foreground" Value="LightGray"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Path=IsStrategyQueued, Mode=OneTime}" Value="true">
                                <Setter Property="FontStyle" Value="Italic"/>
                            </DataTrigger>
                            <Trigger Property="Behaviours:ListViewItemDragState.IsBeingDragged" Value="True">
                                <Setter Property="FontWeight" Value="Bold" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn HeaderTemplate="{StaticResource PlayColumnHeaderTemplate}" Width="25">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="4" FontFamily="WebDings" Foreground="LightGreen" Visibility="{Binding Path=IsPlaying, Converter={StaticResource BooleanVisibilityConverter}}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Track Name">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=FullName}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Length" Width="45">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Track.Duration, Converter={StaticResource TimeSpanConverter}}" TextAlignment="Right" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Vertical" Margin="5,0,5,3">
                    <Rectangle StrokeThickness="0" Fill="{DynamicResource TrimColor}" Height="1"/>
                    <Rectangle StrokeThickness="0" Fill="LightGray" Height="1"/>
                </StackPanel>

                <Grid Grid.Row="1" Margin="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="1"  Content="Play Selection:"/>
                    <ComboBox Grid.Column="2"  x:Name="PlayStrategy" Width="110"
                              ItemsSource="{Binding Path=PlayStrategyList}"
                              DisplayMemberPath="Title" SelectedValuePath="Strategy"
                              SelectedValue="{Binding Path=PlayStrategy}"/>
                </Grid>
                <Grid Grid.Row="2" Margin="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="1" Content="When Exhausted:"/>
                    <ComboBox Grid.Column="2"  x:Name="ExhaustedStrategy" Width="110"
                              ItemsSource="{Binding Path=ExhaustedStrategyList}"
                              DisplayMemberPath="Title" SelectedValuePath="Strategy"
                              SelectedValue="{Binding Path=ExhaustedStrategy}"/>
                </Grid>
                
                <StackPanel Grid.Row="3" Margin="3"  Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Margin="3" Width="25" Content="5" FontFamily="Webdings" Command="{Binding Path=MoveItemUp}"/>
                    <Button Margin="3" Width="25" Content="6" FontFamily="Webdings" Command="{Binding Path=MoveItemDown}"/>
                    <Button Margin="3" Width="25" Content="r" FontFamily="WebDings" Command="{Binding Path=RemoveItem}"/>
                    <Button Margin="3" Content="Clear" Command="{Binding Path=ClearQueue}" Width="37"/>
                </StackPanel>
                <StackPanel Grid.Row="3" Margin="3" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Margin="3" Content="Save" Command="{Binding Path=SavePlayList}" Width="37"/>
                </StackPanel>
            </Grid>
        </Grid>
    </GroupBox>
</UserControl>
