            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            Margin="5,5,5,3"
                            Orientation="Vertical">
                    <Rectangle Height="1"
                               Fill="{DynamicResource TrimColor}"
                               StrokeThickness="0" />
                    <Rectangle Height="1"
                               Fill="LightGray"
                               StrokeThickness="0" />
                </StackPanel>

                <Grid Grid.Row="1" Margin="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="50" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource ControlTextColor}"
                               Text="Total Time:" />
                    <TextBlock Grid.Row="0"
                               Grid.Column="1"
                               Margin="3,0,3,0"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Text="{Binding Path=TotalTime,
                                              Converter={StaticResource TimeSpanConverter}}" />
                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource ControlTextColor}"
                               Text="Remaining Time:" />
                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               Margin="3,0,3,0"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Text="{Binding Path=RemainingTime,
                                              Converter={StaticResource TimeSpanConverter}}" />
                </Grid>

                <Grid Grid.Row="2" Margin="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="1"
                           Content="Play Selection:"
                           Foreground="{DynamicResource ControlTextColor}" />
                    <ComboBox x:Name="PlayStrategy"
                              Grid.Column="2"
                              Width="110"
                              DisplayMemberPath="Title"
                              ItemsSource="{Binding Path=PlayStrategyList}"
                              SelectedValue="{Binding Path=PlayStrategy}"
                              SelectedValuePath="Strategy" />
                </Grid>
                <Grid Grid.Row="3" Margin="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="1"
                           Content="When Exhausted:"
                           Foreground="{DynamicResource ControlTextColor}" />
                    <ComboBox x:Name="ExhaustedStrategy"
                              Grid.Column="2"
                              Width="110"
                              DisplayMemberPath="Title"
                              ItemsSource="{Binding Path=ExhaustedStrategyList}"
                              SelectedValue="{Binding Path=ExhaustedStrategy}"
                              SelectedValuePath="Strategy" />
                </Grid>

                <StackPanel Grid.Row="4"
                            Margin="3"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                    <Button Width="25"
                            Margin="3"
                            Command="{Binding Path=MoveItemUp}"
                            Content="5"
                            FontFamily="Webdings" />
                    <Button Width="25"
                            Margin="3"
                            Command="{Binding Path=MoveItemDown}"
                            Content="6"
                            FontFamily="Webdings" />
                    <Button Width="25"
                            Margin="3"
                            Command="{Binding Path=RemoveItem}"
                            Content="r"
                            FontFamily="WebDings" />
                    <Button Width="37"
                            Margin="3"
                            Command="{Binding Path=ClearQueue}"
                            Content="Clear" />
                </StackPanel>
                <StackPanel Grid.Row="4"
                            Margin="3"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                    <Button Width="37"
                            Margin="3"
                            Command="{Binding Path=SavePlayList}"
                            Content="Save" />
                </StackPanel>
            </Grid>
        </Grid>
    </GroupBox>
</UserControl>
