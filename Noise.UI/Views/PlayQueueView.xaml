<UserControl x:Class="Noise.UI.Views.PlayQueueView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Behaviours="clr-namespace:Noise.UI.Behaviours"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:EventCommandTriggers="clr-namespace:Noise.UI.Behaviours.EventCommandTriggers"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ValueConverters="clr-namespace:Noise.UI.ValueConverters"
             d:DesignHeight="300"
             d:DesignWidth="300"
             DataContext="{Binding PlayQueueViewModel,
                                   Source={StaticResource ViewModelLocator}}"
             mc:Ignorable="d">
    <Control.Resources>
        <Behaviours:CommandReference x:Key="DeleteCommandReference" Command="{Binding DeleteCommand}" />
    </Control.Resources>

    <Control.InputBindings>
        <KeyBinding Key="Delete" Command="{StaticResource DeleteCommandReference}" />
    </Control.InputBindings>

    <GroupBox Margin="0,0,3,0"
              BorderBrush="{DynamicResource TrimColor}"
              BorderThickness="1"
              Header=" Play Queue ">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ListView x:Name="PlayQueueListView"
                      Grid.Row="0"
                      Behaviours:ListViewColumns.Stretch="true"
                      Behaviours:ListViewEnsureVisible.VisibleIndex="{Binding Path=PlayingIndex,
                                                                              Mode=OneWay}"
                      BorderThickness="0"
                      ItemsSource="{Binding Path=QueueList}"
                      SelectedIndex="{Binding Path=SelectedIndex}"
                      SelectedItem="{Binding Path=SelectedItem}">
                <EventCommandTriggers:CommandSource.Trigger>
                    <EventCommandTriggers:CommandTriggerGroup>
                        <EventCommandTriggers:EventCommandTrigger Command="{Binding Path=OnLoaded}" RoutedEvent="ListView.Loaded" />
                        <EventCommandTriggers:EventCommandTrigger Command="{Binding Path=PlayRequested}"
                                                                  CustomParameter="{Binding ElementName=PlayQueueListView,
                                                                                            Path=SelectedValue}"
                                                                  RoutedEvent="ListViewItem.MouseDoubleClick" />
                    </EventCommandTriggers:CommandTriggerGroup>
                </EventCommandTriggers:CommandSource.Trigger>
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=IsPlaying}" Value="true">
                                <Setter Property="FontWeight" Value="Bold" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Path=HasPlayed}" Value="true">
                                <Setter Property="Foreground" Value="LightGray" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Path=IsStrategyQueued, Mode=OneTime}" Value="true">
                                <Setter Property="FontStyle" Value="Italic" />
                            </DataTrigger>
                            <Trigger Property="Behaviours:ListViewItemDragState.IsBeingDragged" Value="True">
                                <Setter Property="FontWeight" Value="Bold" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="25" HeaderTemplate="{StaticResource PlayColumnHeaderTemplate}">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <TextBlock FontFamily="WebDings"
                                                   Foreground="LightGreen"
                                                   Text="4"
                                                   Visibility="{Binding Path=IsPlaying,
                                                                        Converter={StaticResource BooleanVisibilityConverter}}" />
                                        <TextBlock Margin="5,0,0,0"
                                                   Foreground="Red"
                                                   Text="!"
                                                   Visibility="{Binding Path=IsFaulted,
                                                                        Converter={StaticResource BooleanVisibilityConverter}}" />
                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Track Name">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=FullName}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="45" Header="Length">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Track.Duration, Converter={StaticResource TimeSpanConverter}}" TextAlignment="Right" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            Margin="5,5,5,3"
                            Orientation="Vertical">
                    <Rectangle Height="1"
                               Fill="{DynamicResource TrimColor}"
                               StrokeThickness="0" />
                    <Rectangle Height="1"
                               Fill="LightGray"
                               StrokeThickness="0" />
                </StackPanel>

                <Grid Grid.Row="1" Margin="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="50" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource ControlTextColor}"
                               Text="Total Time:" />
                    <TextBlock Grid.Row="0"
                               Grid.Column="1"
                               Margin="3,0,3,0"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Text="{Binding Path=TotalTime,
                                              Converter={StaticResource TimeSpanConverter}}" />
                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource ControlTextColor}"
                               Text="Remaining Time:" />
                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               Margin="3,0,3,0"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Text="{Binding Path=RemainingTime,
                                              Converter={StaticResource TimeSpanConverter}}" />
                </Grid>

                <Grid Grid.Row="2" Margin="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="1"
                           Content="Play Selection:"
                           Foreground="{DynamicResource ControlTextColor}" />
                    <ComboBox x:Name="PlayStrategy"
                              Grid.Column="2"
                              Width="110"
                              DisplayMemberPath="Title"
                              ItemsSource="{Binding Path=PlayStrategyList}"
                              SelectedValue="{Binding Path=PlayStrategy}"
                              SelectedValuePath="Strategy" />
                </Grid>
                <Grid Grid.Row="3" Margin="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="1"
                           Content="When Exhausted:"
                           Foreground="{DynamicResource ControlTextColor}" />
                    <ComboBox x:Name="ExhaustedStrategy"
                              Grid.Column="2"
                              Width="110"
                              DisplayMemberPath="Title"
                              ItemsSource="{Binding Path=ExhaustedStrategyList}"
                              SelectedValue="{Binding Path=ExhaustedStrategy}"
                              SelectedValuePath="Strategy" />
                </Grid>

                <StackPanel Grid.Row="4"
                            Margin="3"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                    <Button Width="25"
                            Margin="3"
                            Command="{Binding Path=MoveItemUp}"
                            Content="5"
                            FontFamily="Webdings" />
                    <Button Width="25"
                            Margin="3"
                            Command="{Binding Path=MoveItemDown}"
                            Content="6"
                            FontFamily="Webdings" />
                    <Button Width="25"
                            Margin="3"
                            Command="{Binding Path=RemoveItem}"
                            Content="r"
                            FontFamily="WebDings" />
                    <Button Width="37"
                            Margin="3"
                            Command="{Binding Path=ClearQueue}"
                            Content="Clear" />
                </StackPanel>
                <StackPanel Grid.Row="4"
                            Margin="3"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                    <Button Width="37"
                            Margin="3"
                            Command="{Binding Path=SavePlayList}"
                            Content="Save" />
                </StackPanel>
            </Grid>
        </Grid>
    </GroupBox>
</UserControl>
