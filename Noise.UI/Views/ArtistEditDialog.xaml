<UserControl x:Class="Noise.UI.Views.ArtistEditDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Behaviours="clr-namespace:Noise.UI.Behaviours" 
             Height="80" Width="550"
             Tag="Artist Properties"
             FocusManager.FocusedElement="{Binding ElementName=FirstFocus}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid Behaviours:GridUtils.ColumnDefinitions="90,*"
          Behaviours:GridUtils.RowDefinitions="Auto,Auto">
        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,5,0" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Name:"/>
        <TextBox x:Name="FirstFocus" Grid.Row="0" Grid.Column="1" Margin="0,5,5,5" Text="{Binding Path=Name}"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,5,0" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Website:"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="0,5,5,5" Text="{Binding Path=Website}"/>
    </Grid>
</UserControl>
