<UserControl x:Class="Noise.UI.Views.TrackEditDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Behaviours="clr-namespace:Noise.UI.Behaviours" 
             Height="95" Width="550"
             Tag="Track Properties"
             FocusManager.FocusedElement="{Binding ElementName=FirstFocus}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid Behaviours:GridUtils.ColumnDefinitions="100,*"
          Behaviours:GridUtils.RowDefinitions="Auto,Auto,Auto">

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,5,0" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Track title:"/>
        <TextBox x:Name="FirstFocus" Grid.Row="0" Grid.Column="1" Margin="0,5,5,5" Text="{Binding Path=EditObject.Name}"/>
        
        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,5,0" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Published year:"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="0,5" Width="60" HorizontalAlignment="Left"
                 Text="{Binding Path=EditObject.PublishedYear, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
        
        <CheckBox Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Margin="0,5" Content="Update information in file tags."
                  IsChecked="{Binding Path=UpdateFileTags}"/>
    </Grid>
</UserControl>
