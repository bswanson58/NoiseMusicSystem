<UserControl x:Class="Noise.UI.Views.ListenStageView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:Controls="clr-namespace:Noise.UI.Controls"
			 xmlns:Views="clr-namespace:Noise.UI.Views">

	<GroupBox Style="{StaticResource SectionBorderStyle}" Header=" Now Playing ">
		<Grid Background="{DynamicResource TreeItemBackground}">
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<Views:PlayingArtistView Grid.Row="0" />
			<Views:PlayingAlbumView Grid.Row="1" />
			<Views:PlayingTrackView Grid.Row="2" />
		</Grid>
	</GroupBox>
</UserControl>
