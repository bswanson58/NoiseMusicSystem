<UserControl x:Class="Noise.UI.Views.ListenStageView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:views="clr-namespace:Noise.UI.Views">

	<GroupBox Style="{StaticResource SectionBorderStyle}" Header=" Now Playing ">
		<Grid Background="{StaticResource NoiseBrush}">
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<views:PlayingArtistView Grid.Row="0" />
			<views:PlayingAlbumView Grid.Row="1" />
			<views:PlayingTrackView Grid.Row="2" />
		</Grid>
	</GroupBox>
</UserControl>
