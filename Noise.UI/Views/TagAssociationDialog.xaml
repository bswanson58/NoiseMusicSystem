<UserControl x:Class="Noise.UI.Views.TagAssociationDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dto="clr-namespace:Noise.UI.Dto"
             Tag="Tag Associations"
             Height="250" Width="420">

    <UserControl.Resources>
        <DataTemplate x:Key="TagItemTemplate" DataType="dto:UiTag">
            <StackPanel Orientation="Horizontal">
                <CheckBox Margin="0,2,0,0" IsChecked="{Binding IsChecked}"/>
                <TextBlock VerticalAlignment="Center" Text="{Binding Name}"/>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Margin="5,2,5,8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Opacity="0.7" Text="Select the tags to be associated with the track:"/>
        <TextBlock Grid.Row="1" Margin="5,0,0,0" Text="{Binding TrackName}"/>
        <TextBlock Grid.Row="2" Opacity="0.7" Margin="3,5,0,3" Text="Available Tags:"/>
        <ListBox Grid.Row="3" BorderThickness="1" ItemsSource="{Binding TagList}" ItemTemplate="{StaticResource TagItemTemplate}"/>
    </Grid>
</UserControl>
