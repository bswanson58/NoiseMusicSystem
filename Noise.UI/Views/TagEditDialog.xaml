<UserControl x:Class="Noise.UI.Views.TagEditDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behaviours="clr-namespace:Noise.UI.Behaviours"
             Tag="Tag Properties"
             FocusManager.FocusedElement="{Binding ElementName=FirstFocus}"
             Height="80" Width="350">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="FirstFocus" Grid.Column="0" Grid.Row="1" Margin="0,0,5,0" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Tag Name:"/>
        <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Tag.Tag.Name}"
                 Style="{StaticResource WaterMarkTextBox}" behaviours:TextBoxHelper.Watermark="enter tag name..." />

        <Button Grid.Column="0" Grid.Row="3" HorizontalAlignment="Left" Content="Delete Tag" Command="{Binding DeleteTag}"/>
    </Grid>
</UserControl>
