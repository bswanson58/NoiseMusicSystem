<UserControl x:Class="Noise.UI.Views.ConfigurationDialog"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Height="225" Width="350"
		Tag="Noise Options"
		>
	
	<Grid Margin="5">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="100"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Label Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Content="Noise Option Settings:" Margin="5,0,0,0"/>
		<CheckBox Grid.Column="0" Grid.Row="1" Content="Load last used library on startup." IsChecked="{Binding LoadLastLibraryOnStartup}" Grid.ColumnSpan="2" Margin="11,3,0,3"/>
		<CheckBox Grid.Column="0" Grid.Row="2" Content="Allow Internet access" IsChecked="{Binding Path=HasNetworkAccess}" Grid.ColumnSpan="2" Margin="11,3,0,3"/>
		<CheckBox Grid.Column="0" Grid.Row="3" Content="Enable remote access" IsChecked="{Binding Path=EnableRemoteAccess}" Grid.ColumnSpan="2" Margin="11,3,0,3"/>
		<CheckBox Grid.Column="0" Grid.Row="4" Content="Enable spoken commands" IsChecked="{Binding Path=EnableSpeechCommands}" Grid.ColumnSpan="2" Margin="11,3,0,3"/>
		
		<CheckBox Grid.Column="0" Grid.Row="5" Content="Minimize To Tray." IsChecked="{Binding Path=MinimizeToTray}" Grid.ColumnSpan="2" Margin="11,3,0,3"/>
		<CheckBox Grid.Column="0" Grid.Row="6" Content="Enable global hotkeys." IsChecked="{Binding Path=EnableGlobalHotkeys}" Grid.ColumnSpan="2" Margin="11,3,0,3"/>
		<CheckBox Grid.Column="0" Grid.Row="7" Content="Enable Explorer Sort Prefixes." IsChecked="{Binding Path=EnableSortPrefixes}" Grid.ColumnSpan="2" Margin="11,3,0,3"/>
		<Label Grid.Column="0" Grid.Row="8" Content="Sort Prefixes:" HorizontalAlignment="Right"/>
		<TextBox Grid.Column="1" Grid.Row="8" Margin="3" Text="{Binding Path=SortPrefixes}"/>
	</Grid>
</UserControl>
