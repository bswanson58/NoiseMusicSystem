<UserControl x:Class="Noise.UI.Views.DatabaseConfigurationDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Behaviours="clr-namespace:Noise.UI.Behaviours"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Height="190" Width="350"
             Tag="Noise Configuration"
             >
    <Grid>
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Content="Noise Database Settings:" Margin="5,0,0,0"/>
            <Label Grid.Column="0" Grid.Row="1" Content="Database Server:" HorizontalAlignment="Right"/>
            <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Path=EditObject.ServerName}" Margin="3"/>
            <Label Grid.Column="0" Grid.Row="2" Content="Database Name:" HorizontalAlignment="Right"/>
            <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Path=EditObject.DatabaseName}" Margin="3"/>
            <Label Grid.Column="0" Grid.Row="3" Content="User Name:" HorizontalAlignment="Right"/>
            <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding Path=EditObject.UserName}" Margin="3"/>
            <Label Grid.Column="0" Grid.Row="4" Content="Password:" HorizontalAlignment="Right"/>
            <PasswordBox Grid.Column="1" Grid.Row="4" Margin="3" Behaviours:PasswordBoxAssistant.BindPassword="true" 
                         Behaviours:PasswordBoxAssistant.BoundPassword="{Binding Path=EditObject.UserPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Grid.Column="0" Grid.Row="5" Content="Search Index:" HorizontalAlignment="Right"/>
            <Grid Grid.Column="1" Grid.Row="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Text="{Binding Path=EditObject.SearchIndexLocation}" Margin="3"/>
                <Button Grid.Column="1" Margin="3" Content=" ... " Command="{Binding Path=Browse}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
