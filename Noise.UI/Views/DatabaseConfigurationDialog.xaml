<Window x:Class="Noise.UI.Views.DatabaseConfigurationDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Behaviours="clr-namespace:Noise.UI.Behaviours" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
        ShowInTaskbar="False"
        Height="210" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Title="Noise Configuration"
        WindowStyle="ToolWindow"
        DataContext="{Binding DialogModelBase, Source={StaticResource ViewModelLocator}}" Topmost="True"
        Behaviours:DialogCloser.DialogResult="{Binding DialogResult}"
             >
    <Grid>
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Content="Noise Database Settings:" Margin="5,0,0,0"/>
            <Label Grid.Column="0" Grid.Row="1" Content="Database Server:" HorizontalAlignment="Right"/>
            <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Path=EditObject.ServerName}" Margin="3"/>
            <Label Grid.Column="0" Grid.Row="2" Content="Database Name:" HorizontalAlignment="Right"/>
            <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Path=EditObject.DatabaseName}" Margin="3"/>
            <Label Grid.Column="0" Grid.Row="3" Content="User Name:" HorizontalAlignment="Right"/>
            <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding Path=EditObject.UserName}" Margin="3"/>
            <Label Grid.Column="0" Grid.Row="4" Content="Password:" HorizontalAlignment="Right"/>
            <Behaviours:BindablePasswordBox Grid.Column="1" Grid.Row="4"  BindablePassword="{Binding Path=EditObject.UserPassword}">
                <PasswordBox Margin="3"/>
            </Behaviours:BindablePasswordBox>

            <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK" Command="{Binding Path=Ok}" Width="70" IsDefault="True" Height="22" VerticalAlignment="Bottom" Margin="5,0"/>
                <Button Content="Cancel" Command="{Binding Path=Cancel}" Width="70" Margin="5,0" IsCancel="True" Height="22" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
