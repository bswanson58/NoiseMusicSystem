<UserControl x:Class="Noise.UI.Views.SelectPlayListDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Height="70" Width="350"
             Tag="Select Playlist"
             >
    
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="9"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" Content="Playlists:" Margin="5,0,0,0"/>
        <ComboBox Grid.Column="1" Grid.Row="1" ItemsSource="{Binding Path=PlayLists}" SelectedItem="{Binding Path=SelectedItem}" DisplayMemberPath="Name" />
    </Grid>
</UserControl>
