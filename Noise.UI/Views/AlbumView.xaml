<UserControl x:Class="Noise.UI.Views.AlbumView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Behaviours="clr-namespace:Noise.UI.Behaviours"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:Controls="clr-namespace:Noise.UI.Controls" 
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.DataContext>
        <Binding Path="AlbumViewModel" Source="{StaticResource ViewModelLocator}"/>
    </UserControl.DataContext>

    <GroupBox BorderThickness="1" BorderBrush="{DynamicResource TrimColor}" Margin="0">
        <GroupBox.Header>
            <StackPanel Orientation="Horizontal">
                <Button Content="{StaticResource Path_SwitchView}" Height="19" Width="21" Margin="0,0,0,2" Command="{Binding Path=SwitchView}"/>
                <TextBlock Margin="5,0" Text="Album"/>
            </StackPanel>
        </GroupBox.Header>
        <Grid Visibility="{Binding Path=AlbumValid, Converter={StaticResource BooleanVisibilityConverter}}"
              Behaviours:GridUtils.RowDefinitions="Auto,*">
            <Border Grid.Row="0" BorderThickness="0" CornerRadius="5" Background="{DynamicResource TreeItemBackground}">
                <Grid Behaviours:GridUtils.ColumnDefinitions="Auto,*,Auto">
                    <!-- Album cover image -->
                    <Image Grid.Column="0" Margin="7" MaxHeight="200" MaxWidth="300" Stretch="Uniform" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <RotateTransform Angle="{Binding Path=AlbumCover.Rotation}"/>
                        </Image.RenderTransform>
                        <i:Interaction.Behaviors>
                            <Behaviours:ImageScrubber ImageList="{Binding Path=AlbumArtwork}" Image="{Binding Path=AlbumCover, Mode=TwoWay}" />
                        </i:Interaction.Behaviors>
                    </Image>
                    
                    <Grid Grid.Column="2" Margin="3,0,25,0" Behaviours:GridUtils.RowDefinitions="Auto,Auto,Auto,Auto,Auto,*,Auto">
                        <!-- Album name and Play button -->
                        <Grid Grid.Row="0" Margin="0,0,0,9" HorizontalAlignment="Right" Behaviours:GridUtils.ColumnDefinitions="Auto,Auto">
                            <Button Style="{StaticResource PlayButtonStyle}" Grid.Column="0" Margin="0,0,3,0" Command="{Binding Path=PlayAlbum}"/>
                            <TextBlock Grid.Column="1" Text="{Binding Path=Album.Name}" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        </Grid>
                        
                        <!-- Favorite and rating -->
                        <StackPanel HorizontalAlignment="Right" Grid.Row="1" Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding Path=Album.UiIsFavorite, Mode=TwoWay}" Margin="0,0,9,0"  VerticalAlignment="Center" Style="{StaticResource FavoriteCheckBoxStyle}" Width="15" Height="15"/>
                            <Controls:RatingControl Style="{StaticResource NoiseRatingStyle}" Rating="{Binding Path=Album.UiRating, Mode=TwoWay}"/>
                        </StackPanel>
                        
                        <TextBlock Text="{Binding Path=Album.Genre}"  HorizontalAlignment="Right" Grid.Row="2"/>
                        <TextBlock Text="{Binding Path=Album.PublishedYear, Converter={StaticResource PublishedYearConverter}}"  HorizontalAlignment="Right" Grid.Row="3"/>
                        
                        <!-- Playing time -->
                        <StackPanel HorizontalAlignment="Right" Grid.Row="4" Orientation="Horizontal">
                            <TextBlock Text="Playing time: "/>
                            <TextBlock Text="{Binding Path=AlbumPlayTime, Converter={StaticResource TimeSpanConverter}}"/>
                        </StackPanel>
                        
                        <!-- Album commands -->
                        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Height="19" Width="19" Margin="0,0,5,5" Padding="1" ToolTip="Open Album Folder"
                                    Content="{StaticResource Path_Folder}" Command="{Binding Path=OpenAlbumFolder}"/>
                            <Button Height="19" Width="19" Margin="0,0,5,5" Padding="1" ToolTip="Display Album Extras"
                                    Content="{StaticResource Path_Pictures}" Command="{Binding DisplayPictures}"/>
                            <Button Height="19" Width="19" Margin="0,0,0,5" Padding="2" ToolTip="Edit Album Properties"
                                    Content="{StaticResource Path_Edit}" Command="{Binding Path=EditAlbum}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
            <GroupBox Grid.Row="1" BorderThickness="1" BorderBrush="{DynamicResource TrimColor}" Header=" Tracks " Margin="0,0,3,0">
                <ListView ItemsSource="{Binding Path=TrackList}" BorderThickness="0"
                          Behaviours:ListViewFirstItemVisible.ChangeTrigger="{Binding Path=Album, Mode=OneWay}"
                          Behaviours:ListViewColumns.Stretch="true"
                          Behaviours:GridViewSort.AutoSort="True">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn HeaderTemplate="{StaticResource PlayColumnHeaderTemplate}" Width="27">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Command="{Binding Path=Play}" Style="{StaticResource PlayButtonStyle}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="#" Width="33" Behaviours:GridViewSort.PropertyName="TrackNumber">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=TrackNumber}" TextAlignment="Right" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Track Name" DisplayMemberBinding="{Binding Path=Name}" Behaviours:GridViewSort.PropertyName="Name"/>
                            <GridViewColumn Header="Duration" Width="75" Behaviours:GridViewSort.PropertyName="Duration">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=Duration, Converter={StaticResource TimeSpanConverter}}" TextAlignment="Right" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn HeaderTemplate="{StaticResource FavoriteColumnHeaderTemplate}" Width="27" Behaviours:GridViewSort.PropertyName="UiIsFavorite">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox HorizontalAlignment="Center" Style="{StaticResource FavoriteCheckBoxStyle}" IsChecked="{Binding Path=UiIsFavorite, Mode=TwoWay}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Rating" Width="115" Behaviours:GridViewSort.PropertyName="UiRating">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Controls:RatingControl HorizontalAlignment="Center" Style="{StaticResource NoiseRatingStyle}" Rating="{Binding Path=UiRating, Mode=TwoWay}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>
        </Grid>
    </GroupBox>
</UserControl>
