<UserControl x:Class="Noise.UI.Views.PlayHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Behaviours="clr-namespace:Noise.UI.Behaviours" 
             mc:Ignorable="d"
             DataContext="{Binding PlayHistoryViewModel, Source={StaticResource ViewModelLocator}}"
             Tag="History"
             d:DesignHeight="300" d:DesignWidth="300">
    
    <GroupBox BorderThickness="1" BorderBrush="{DynamicResource TrimColor}" Header=" Play History " Margin="3,0,0,0">
        <ListView ItemsSource="{Binding Path=HistoryList}" BorderThickness="0"
                  Behaviours:ListViewColumns.Stretch="true">
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="|>" Width="27">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Width="12" Height="12" Command="{Binding Path=PlayTrack}">
                                    <Button.CommandParameter>
                                        <Binding Path="Track"/>
                                    </Button.CommandParameter>
                                </Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Track Name">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Path=Track.Name}"/>
                                    <TextBlock Text=" - ("/>
                                    <TextBlock Text="{Binding Path=Artist.Name}"/>
                                    <TextBlock Text="/"/>
                                    <TextBlock Text="{Binding Path=Album.Name}"/>
                                    <TextBlock Text=")"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Last Played" Width="140">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=PlayedOn}" TextAlignment="Right" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </GroupBox>
</UserControl>
