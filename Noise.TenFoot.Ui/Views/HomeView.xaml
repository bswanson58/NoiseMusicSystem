<UserControl x:Class="Noise.TenFoot.Ui.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Noise.TenFoot.Ui.Controls.LoopingListBox"
             xmlns:LoopPanelSample="clr-namespace:LoopPanelSample">

    <UserControl.Resources>
        <Style x:Key="LLStyle"
               BasedOn="{StaticResource {x:Type ListBox}}"
               TargetType="{x:Type controls:LoopingListBox}">
            <Setter Property="Padding" Value="2" />
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="KeyboardNavigation.DirectionalNavigation" Value="Cycle" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type controls:LoopingListBox}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="sv"
                                          HorizontalScrollBarVisibility="Disabled"
                                          Padding="{TemplateBinding Padding}"
                                          VerticalScrollBarVisibility="Auto">
                                <controls:LoopPanel x:Name="lp"
                                                    BringChildrenIntoView="True"
                                                    IsItemsHost="True"
                                                    Orientation="{TemplateBinding Orientation}"
                                                    RelativeOffset="{TemplateBinding RelativeOffset}"
                                                    Offset="{Binding Offset,
                                                                     RelativeSource={RelativeSource TemplatedParent},
                                                                     Mode=TwoWay}" />
                            </ScrollViewer>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Orientation" Value="Vertical">
                                <Setter TargetName="sv" Property="HorizontalScrollBarVisibility" Value="Auto" />
                                <Setter TargetName="sv" Property="VerticalScrollBarVisibility" Value="Disabled" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <LoopPanelSample:CharacterCollection x:Key="Characters">
            <LoopPanelSample:Character Age="10"
                                       First="Bart"
                                       Gender="Male"
                                       Image="images/bart.png"
                                       Last="Simpson" />
            <LoopPanelSample:Character Age="37"
                                       First="Dr. WPF"
                                       Gender="Unknown"
                                       Image="images/drwpf.png"
                                       Last="" />
            <LoopPanelSample:Character Age="38"
                                       First="Homer"
                                       Gender="Male"
                                       Image="images/homer.png"
                                       Last="Simpson" />
            <LoopPanelSample:Character Age="8"
                                       First="Lisa"
                                       Gender="Female"
                                       Image="images/lisa.png"
                                       Last="Simpson" />
            <LoopPanelSample:Character Age="0"
                                       First="Maggie"
                                       Gender="Female"
                                       Image="images/maggie.png"
                                       Last="Simpson" />
            <LoopPanelSample:Character Age="38"
                                       First="Marge"
                                       Gender="Female"
                                       Image="images/marge.png"
                                       Last="Simpson" />
        </LoopPanelSample:CharacterCollection>

        <DataTemplate DataType="{x:Type LoopPanelSample:Character}">
            <StackPanel Margin="5"
                        Background="Transparent"
                        Orientation="Vertical">
                <TextBlock FontWeight="Bold"
                           Text="{Binding First}"
                           TextAlignment="Center" />
                <Image Margin="0,5,0,0"
                       Source="{Binding Image}"
                       Stretch="Fill" />
            </StackPanel>
        </DataTemplate>

        <Style x:Key="CharacterContainerStyle" TargetType="{x:Type ListBoxItem}">
            <Setter Property="controls:LoopingListBox.IsDragHandle" Value="True" />
            <Setter Property="Canvas.Left" Value="{Binding Location.X}" />
            <Setter Property="Canvas.Top" Value="{Binding Location.Y}" />
            <Setter Property="Background" Value="#FF3B0031" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="200" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Margin" Value="5,2" />
            <Setter Property="Padding" Value="3" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Grid>
                            <Rectangle Fill="White"
                                       RadiusX="5"
                                       RadiusY="5"
                                       Stroke="Transparent"
                                       StrokeThickness="1" />
                            <Grid>
                                <Rectangle x:Name="BackgroundRect"
                                           Fill="{TemplateBinding Background}"
                                           Opacity="0.5"
                                           RadiusX="5"
                                           RadiusY="5"
                                           Stroke="Transparent"
                                           StrokeThickness="1" />
                                <Rectangle RadiusX="3"
                                           RadiusY="3"
                                           Stroke="#FF000000"
                                           StrokeThickness="1">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="-0.513721,0.412914" EndPoint="1.43072,0.412914">
                                            <LinearGradientBrush.GradientStops>
                                                <GradientStop Offset="0" Color="Transparent" />
                                                <GradientStop Offset="1" Color="#60FFFFFF" />
                                            </LinearGradientBrush.GradientStops>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0.6*" />
                                        <RowDefinition Height="0.4*" />
                                    </Grid.RowDefinitions>
                                    <Rectangle Grid.Row="0"
                                               Grid.RowSpan="1"
                                               Margin="3"
                                               RadiusX="3"
                                               RadiusY="3">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                                <GradientStop Offset="0" Color="#44FFFFFF" />
                                                <GradientStop Offset="1" Color="#66FFFFFF" />
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </Grid>
                                <ContentPresenter x:Name="ContentHost"
                                                  Margin="{TemplateBinding Padding}"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                                <Rectangle Margin="1"
                                           Fill="{x:Null}"
                                           RadiusX="3"
                                           RadiusY="3"
                                           Stroke="#FFFFFFFF" />
                            </Grid>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Selector.IsSelected" Value="True">
                                <Setter TargetName="BackgroundRect" Property="Opacity" Value="1" />
                                <Setter TargetName="ContentHost" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="20"
                                                          ShadowDepth="0"
                                                          Color="White" />
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="BackgroundRect" Property="Opacity" Value="1" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Gender}" Value="Female">
                    <Setter Property="Background" Value="#FFF339CB" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <controls:LoopingListBox x:Name="listBox"
                                 Grid.Row="0"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 ItemContainerStyle="{StaticResource CharacterContainerStyle}"
                                 ItemsSource="{Binding Source={StaticResource Characters}}"
                                 Orientation="Vertical"
                                 Style="{StaticResource LLStyle}" />
    </Grid>
</UserControl>
