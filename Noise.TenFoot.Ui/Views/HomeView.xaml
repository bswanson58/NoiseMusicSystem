<UserControl x:Class="Noise.TenFoot.Ui.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:LoopingListBox="clr-namespace:Noise.TenFoot.Ui.Controls.LoopingListBox">

    <UserControl.Resources>
        <Style x:Key="MenuItemStyle" TargetType="{x:Type ListBoxItem}">
            <Setter Property="LoopingListBox:LoopingListBox.IsDragHandle" Value="True" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Grid>
                            <Rectangle Fill="White"
                                       RadiusX="5"
                                       RadiusY="5"
                                       Stroke="Transparent"
                                       StrokeThickness="1" />
                            <Grid>
                                <Rectangle x:Name="BackgroundRect"
                                           Fill="{TemplateBinding Background}"
                                           Opacity="0.5"
                                           RadiusX="5"
                                           RadiusY="5"
                                           Stroke="Transparent"
                                           StrokeThickness="1" />
                                <Rectangle RadiusX="3"
                                           RadiusY="3"
                                           Stroke="#FF000000"
                                           StrokeThickness="1">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="-0.513721,0.412914" EndPoint="1.43072,0.412914">
                                            <LinearGradientBrush.GradientStops>
                                                <GradientStop Offset="0" Color="Transparent" />
                                                <GradientStop Offset="1" Color="#60FFFFFF" />
                                            </LinearGradientBrush.GradientStops>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0.6*" />
                                        <RowDefinition Height="0.4*" />
                                    </Grid.RowDefinitions>
                                    <Rectangle Grid.Row="0"
                                               Grid.RowSpan="1"
                                               Margin="3"
                                               RadiusX="3"
                                               RadiusY="3">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                                <GradientStop Offset="0" Color="#44FFFFFF" />
                                                <GradientStop Offset="1" Color="#66FFFFFF" />
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </Grid>
                                <ContentPresenter x:Name="ContentHost"
                                                  Margin="{TemplateBinding Padding}"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                                <Rectangle Margin="1"
                                           Fill="{x:Null}"
                                           RadiusX="3"
                                           RadiusY="3"
                                           Stroke="#FFFFFFFF" />
                            </Grid>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Selector.IsSelected" Value="True">
                                <Setter TargetName="BackgroundRect" Property="Opacity" Value="1" />
                                <Setter TargetName="ContentHost" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="20"
                                                          ShadowDepth="0"
                                                          Color="White" />
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="BackgroundRect" Property="Opacity" Value="1" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>
    <Grid Background="Transparent">
        <LoopingListBox:LoopingListBox Width="400"
                                       Height="400"
                                       ItemsSource="{Binding MenuChoices}"
                                       Orientation="Vertical" />
    </Grid>
</UserControl>
