<UserControl x:Class="Noise.TenFoot.Ui.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:controls="clr-namespace:Noise.TenFoot.Ui.Controls.LoopingListBox"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Dto="clr-namespace:Noise.TenFoot.Ui.Dto"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ViewModels="clr-namespace:Noise.TenFoot.Ui.ViewModels"
             cal:Bind.AtDesignTime="True"
             d:DataContext="{d:DesignInstance ViewModels:HomeViewModel,
                                              IsDesignTimeCreatable=True}"
             d:DesignHeight="500"
             d:DesignWidth="700"
             mc:Ignorable="d">

    <UserControl.Resources>
        <DataTemplate x:Key="MenuItem" DataType="{x:Type Dto:UiMenuItem}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0"
                       Margin="5"
                       Source="{Binding Image}"
                       Stretch="Fill" />
                <TextBlock Grid.Column="1"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="36"
                           FontWeight="Bold"
                           Text="{Binding Title}" />
            </Grid>
        </DataTemplate>

        <Style x:Key="MenuItemStyle" TargetType="{x:Type ListBoxItem}">
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="Width" Value="300" />
            <Setter Property="Height" Value="120" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Grid>
                            <ContentPresenter x:Name="ContentHost"
                                              Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Margin="0,0,15,0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   FontFamily="Calibri"
                   FontSize="64"
                   Foreground="White"
                   Opacity="0.6"
                   Text="Noise" />

        <Rectangle Grid.Row="1"
                   Fill="AliceBlue"
                   Opacity="0.1" />
        <controls:LoopingListBox x:Name="MenuList"
                                 Grid.Row="1"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 ItemContainerStyle="{StaticResource MenuItemStyle}"
                                 ItemTemplate="{StaticResource MenuItem}"
                                 LastItemMargin="1.1"
                                 Orientation="Vertical"
                                 RelativeOffset="0.5"
                                 Offset="{Binding Path=MenuListIndex}" />

        <StackPanel Grid.Row="2"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <Button x:Name="ScrollUp"
                    Width="120"
                    Margin="15,0,0,0"
                    Content="Scroll Up" />
            <Button x:Name="ScrollDown"
                    Width="120"
                    Margin="15,0,0,0"
                    Content="Scroll Down" />
        </StackPanel>
    </Grid>
</UserControl>
