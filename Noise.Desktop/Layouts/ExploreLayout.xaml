<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Infrastructure="clr-namespace:Noise.Infrastructure;assembly=Noise.Infrastructure"
             xmlns:cal="clr-namespace:Microsoft.Practices.Composite.Presentation.Regions;assembly=Microsoft.Practices.Composite.Presentation">
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="105"/>
        </Grid.RowDefinitions>
        
        <DockPanel x:Name="Toolbar" Grid.Row="0">
            <ContentControl cal:RegionManager.RegionName="Toolbar"/>
        </DockPanel>

        <Grid x:Name="Content" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <TabControl Grid.Column="0" Margin="3,0,7,0" TabStripPlacement="Bottom" Background="Transparent" BorderThickness="0"
                        cal:RegionManager.RegionName="Explorer" 
                        ItemContainerStyle="{StaticResource TabItemRegionStyle}"/>
            
            <GridSplitter Grid.Column="0" Width="7" Height="Auto" Background="Transparent" ResizeDirection="Columns"/>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <ContentControl Grid.Row="0" Margin="0,3,3,0" cal:RegionManager.RegionName="ArtistInfo"/>
                <ContentControl Grid.Row="1" Margin="0,0,3,0" cal:RegionManager.RegionName="AlbumInfo"/>
            </Grid>

            <GridSplitter Grid.Column="1" Width="7" Height="Auto" Background="Transparent" ResizeDirection="Columns"/>
            
            <ContentControl Grid.Column="2" Margin="0" cal:RegionManager.RegionName="PlayQueue"/>
        </Grid>

        <ContentControl Grid.Row="2" Margin="3,0,0,3" cal:RegionManager.RegionName="Player"/>
    </Grid>
</UserControl>
