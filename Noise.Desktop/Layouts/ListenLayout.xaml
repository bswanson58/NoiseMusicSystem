<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:Regions="http://www.codeplex.com/CompositeWPF">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="4*" />
			<ColumnDefinition Width="1*" />
		</Grid.ColumnDefinitions>

		<ContentControl Grid.Column="0" Margin="7,5,8,7" Regions:RegionManager.RegionName="ListenStage" />

		<GridSplitter Width="7" Height="Auto" Background="Transparent" ResizeDirection="Columns" Style="{DynamicResource GridSplitterVerticalStyle}" />

		<ContentControl Grid.Column="1" Margin="4,5,9,7" Regions:RegionManager.RegionName="PlaybackControl" />
	</Grid>
</UserControl>
