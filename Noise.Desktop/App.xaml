<Application x:Class="Noise.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vml="clr-namespace:Noise.UI.Support;assembly=Noise.UI"
             >
    <Application.Resources>
    	<ResourceDictionary>
    		<ResourceDictionary.MergedDictionaries>
    			<ResourceDictionary Source="Resources/GlobalResources.xaml"/>
    		</ResourceDictionary.MergedDictionaries>
            
    		<vml:ViewModelLocator x:Key="ViewModelLocator">
    			<vml:ViewModelLocator.Resolver>
    				<vml:ViewModelResolver />
    			</vml:ViewModelLocator.Resolver>
    		</vml:ViewModelLocator>
    	</ResourceDictionary>
    </Application.Resources>
</Application>
