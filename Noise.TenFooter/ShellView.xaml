<Window x:Class="Noise.TenFooter.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0" Color="#FFB8CDE9" />
                    <GradientStop Offset="1" Color="#FF2577E5" />
                    <GradientStop Offset="0.845" Color="#FF6795D4" />
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="15" />
                <RowDefinition Height="*" />
                <RowDefinition Height="15" />
            </Grid.RowDefinitions>

            <ContentControl x:Name="ActiveItem" Grid.Row="1" />
        </Grid>

        <ContentControl x:Name="PlayerView"
                        Width="600"
                        Height="170"
                        Margin="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom" />

    </Grid>

</Window>
